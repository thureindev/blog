---
layout: compress
---

{% assign favicon_path = "/assets/img/favicons" | relative_url %}

{
  "name": "{{ site.title }}",
  "short_name": "{{ site.title }}",
  "description": "{{ site.description }}",
  "icons": [
    {
      "src": "{{ favicon_path }}/android-chrome-192x192.jpg",
      "sizes": "192x192",
      "type": "image/jpg"
    },
    {
      "src": "{{ favicon_path }}/android-chrome-512x512.jpg",
      "sizes": "512x512",
      "type": "image/jpg"
    },
    {
      "src": "{{ favicon_path }}/apple-touch-icon.jpg",
      "sizes": "180x180",
      "type": "image/jpg"
    }],
  "start_url": "{{ '/index.html' | relative_url }}",
  "theme_color": "#2a1e6b",
  "background_color": "#ffffff",
  "display": "fullscreen"
}
